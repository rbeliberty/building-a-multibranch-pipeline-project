
pipeline {
   agent {
        dockerfile {
            filename 'DockerfileJenkins'

        }
   }

    stages {

        stage('Build Image and Push Registry') {
            agent any
            steps {
                withEnv(['PATH+EXTRA=/usr/sbin:/usr/bin:/sbin:/bin']) {

                    sh '''
                        ls -la
                        docker build -t test/test:latest .
                    '''
                }
            }
        }

    }

}


